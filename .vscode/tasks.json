{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Run Python File",
          "type": "shell",
          "command": "wsl.exe",
          "args": ["python3", "${file}"],
          "group": {
            "kind": "build",
            "isDefault": true
          },
          "presentation": {
            "reveal": "always",
            "panel": "shared"
          },
          "problemMatcher": ["$python"]
        }
      ]
}